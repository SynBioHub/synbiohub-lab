    div.card-body

        h4 Constructs Involved
        for construct in constructs
            a(style='font-size:18px',href=construct.uri) #{construct.displayName}
            br
        br

        table.table.table-striped.entry-detail-table
            tr
                td Researcher
                td #{agent}
            tr
                td Protocol
                td 
                    a(href=plan_url + '/download') #{plan}
            tr
                td Organism
                td 
                    a(href=taxId) #{organism}
            tr
                td Experimental Conditions
                td 
                    for data in experimentalData
                        if data.attachments[0].displayName
                            a(href=data.attachments[0].uri + '/download') #{data.attachments[0].displayName}