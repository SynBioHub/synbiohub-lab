
extends ../layouts/default.jade

block head
    style.
        .sbh-corner-logo {
            display: none;
        }

        .top-search-form {
            display: none;
        }

        .main-search-form input {
            width: 60%;
            margin-left: 0;
            background-color: white;
            padding: 14px 16px 13px 32px;
            height: 40px;
        }

        .main-search-form .submit {
            padding: 12px 21px;
            height: 40px;
        }

        .main-search-form label {
            color: #7F8C8D;
        }

        .search-section {
            height: 60px;
            padding: 20px;
            margin: 0 auto;
            width: 50%;
            margin-bottom: 40px;
            text-align: center;
        }

        .navbar {
        }

        .sbol-breadcrumbs {
        }

        .sbol-logo-dark-single-line {
            display: none;
        }

        h1 {
            margin-top: 10px;
            margin-bottom: 10px;
        }

block breadcrumbs
    ul
        li
            span.fa.fa-home
            |  Home

block content

    div.container.container-fluid

        div.row
            div.col-md-12.text-center
                if config.instanceLogo
                    img.instance-logo(src=config.instanceLogo,height=100)
                    br
                else
                    div
                        h1(style='margin-left: 15px;') #{config.instanceName}
        div.row
            div.col-md-2
            div.col-md-8.sbh-frontpage-blurb
                p !{config.frontPageText}
        div.row.sbh-main-page-row
            div.col-md-12(style='text-align: center;')
                div.sbh-frontpage-container
                    table.sbh-frontpage-pictures(style='text-align: left;')
                        tr
                            td
                                span.fa.fa-search
                            td
                                h3 #[b Search] for useful parts and designs
                                form(action='/search').main-search-form
                                    input.sbh-autocomplete(type='text',name='q',placeholder='Part name', value=(searchQuery || ''))
                                    button(type='submit', style="padding-top: 10px; padding-bottom: 14px").submit Search
                                br
                                a.button.btn.btn-primary(href='/browse') Browse Design Collections
                        tr
                            td
                                span.fa.fa-upload
                            td
                                h3 #[b Upload] your design for safekeeping
                                a.button.btn.btn-primary(href='/submit') Submit a Design
                        tr
                            td
                                span.fa.fa-share-alt
                            td
                                h3 #[b Share] designs for publication or collaboration
                                a.button.btn.btn-primary(href='/manage') Manage Submissions


