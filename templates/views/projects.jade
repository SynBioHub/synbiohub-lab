
extends ../layouts/default.jade

include ../mixins/search-result.jade

block content

    div.clearfix
        div(style="padding-top:50px").container
            div.col-md-5.submission-list.resultsCol
                h4 Private
                br
                table.table.table-striped.entry-detail-table.sbh-collection-members-datatable.table-hover
                    thead
                        th Project Name
                        th Designs
                        th Constructs
                        th Experiments
                    tbody
                        each project in privateProjects
                            tr
                                td
                                    a(href=project.url) #{project.name}
                                td
                                    if project.typeBooleans[0]
                                        span.topLevelIcon.fas.fa-check
                                    else
                                        span.topLevelIcon.fas.fa-times
                                td
                                    if project.typeBooleans[1]
                                        span.topLevelIcon.fas.fa-check
                                    else
                                        span.topLevelIcon.fas.fa-times
                                td
                                    if project.typeBooleans[2]
                                        span.topLevelIcon.fas.fa-check
                                    else
                                        span.topLevelIcon.fas.fa-times

            br
            br

            div.col-md-5.submission-list.resultsCol
                h4 Public
                br
                table.table.table-striped.entry-detail-table.sbh-collection-members-datatable.table-hover
                    thead
                        th Project Name
                        th Designs
                        th Constructs
                        th Experiments
                    tbody
                        each project in publicProjects
                            tr
                                td
                                    a(href=project.url) #{project.name}
                                td
                                    if project.typeBooleans[0]
                                        span.topLevelIcon.fas.fa-check
                                    else
                                        span.topLevelIcon.fas.fa-times
                                td
                                    if project.typeBooleans[1]
                                        span.topLevelIcon.fas.fa-check
                                    else
                                        span.topLevelIcon.fas.fa-times
                                td
                                    if project.typeBooleans[2]
                                        span.topLevelIcon.fas.fa-check
                                    else
                                        span.topLevelIcon.fas.fa-times
                                


